{
  "hosting": {
    "site": "heektime-notice",
    "public": "public",
    "headers": [
      {
	"source": "/status.json",
	"headers": [{
	  "key": "Cache-Control",
	  "value": "no-cache, no-store, must-revalidate"
	}]
      },
      {
	"source": "**/*.watchface",
	"headers": [{
	  "key": "Content-Type",
	  "value": "application/vnd.apple.watchface"
	}]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
